{
    "exclude": ["./tests/", "./node_modules/", "./dist/"],
    "compilerOptions": {
      "target": "ES6",                      // Compiles to ES6 JavaScript
      "module": "ES2015",                   // Uses ES2015 modules
      "moduleResolution": "node",           // Resolves modules like Node.js
      "esModuleInterop": true,              // Ensures compatibility with ES modules
      "declaration": true,                  // Generates .d.ts files for types
      "outDir": "./dist",                   // Output directory for compiled files
      "strict": true,                       // Enable all strict type-checking options
      "skipLibCheck": true,                  // Skip type checking for library files
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]                 // Includes all files in the src directory
  }